<h1>Complete tag list</h1>

<ul>
<% @tags.each do |tag| %>

  <li>
  <%= tag.name %>
  <%= link_to " (articles tagged with this tag)", tag_path(tag) %>
  <% if logged_in? %>
    <%= link_to "  delete", tag_path(tag), method: :delete,
                  data: {confirm: "Really delete this tag?"} %>
  <% end %>
</li>
  <% end %>
</ul>



